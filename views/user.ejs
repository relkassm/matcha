<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
<div class="container">
  <div class="main-body">
    <form action="/profile" method="POST">
      <div class="col-md-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <div class="mt-3">
                  <h2 style="text-transform: capitalize;"><%= row.username %>'s Profile</h2>
                  <img class="dp" src="<%= row.img0 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img1 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img2 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img3 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img4 %>" style="height: 100px; width: 100px;">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Last Name : <%= row.lastname %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">First Name : <%= row.firstname%></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Age : <%= row.age %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Gender : <%= row.gender %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Sexual Preference : <%= row.preference %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Bio : <%= row.bio %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Distance : <%= row.distance.toFixed(2) %> Km</h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Country : <%= row.country %> </h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Fame : <%= row.rating %> </h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-1">Intrests : <%= tags %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-10">
                <% if (row.online == 1) { %>
                <h6 class="mb-0">Online</h6>
                <% } else { %>
                <h6 class="mb-0">Offline</h6>
                <h6 class="mb-0">Last Connection : <%= row.last_con %> </h6>
                <% } %>
              </div>
            </div>

          </div>
        </div>
      </div>
      </form>
    </div>
</div>
</body>
    <%- include('./partials/footer.ejs') %>
</html>
