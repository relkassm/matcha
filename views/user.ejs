<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
<div class="container">
  <div class="main-body">
    <form action="/user/<%= row.id %>" method="POST">
      <div class="col-md-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <div class="mt-3">
                  <h2 style="text-transform: capitalize;"><%= row.username %>'s Profile</h2>
                  <img class="dp" src="<%= row.img0 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img1 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img2 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img3 %>" style="height: 100px; width: 100px;">
                  <img class="dp" src="<%= row.img4 %>" style="height: 100px; width: 100px;">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Last Name : <%= row.lastname %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">First Name : <%= row.firstname%></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Age : <%= row.age %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Gender : <%= row.gender %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Sexual Preference : <%= row.preference %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Bio : <%= row.bio %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Distance : <%= row.distance.toFixed(2) %> Km</h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Country : <%= row.country %> </h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-0">Fame : <%= row.rating %> </h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-5">
                <h6 class="mb-1">Intrests : <%= tags %></h6>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-10">
                <% if (row.online == 1) { %>
                <h6 class="mb-0">Online</h6>
                <% } else { %>
                <h6 class="mb-0">Offline</h6>
                <h6 class="mb-0">Last Connection : <%= row.last_con %> </h6>
                <% } %>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-5">
                <input type="hidden"  name="id" value="<%= row.id %>">
                <% if (is_liked == 1) { %>
                  <input type="submit" class="button3" name="unlike" id="unlike" value="unlike">
                <% } else { %>
                  <input type="submit" class="button3" name="like" id="like" value="like">
                <% } %>
                <input type="submit" class="button3" name="block" id="block" value="block">
                <input type="submit" class="button3" name="report" id="report" value="report">
            </div>
          </div>
          </div>
        </div>
      </div>
      </form>
      <% if (is_match == 1) { %>
      <form method="POST">
        <div class="col-md-12">
          <div class="card mb-3">
            <div class="card-body">
              <h3>Chat</h3>
              <input type="hidden"  name="id" value="<%= row.id %>">
              <textarea name="message"></textarea>
              <input type="submit" name="send" value="Send" class="button3">
              <div id="msgdiv" style="height: 500px; overflow: scroll;">
                <% if (locals.messages) { %>
                  <% for (var i = 0; i < messages.length; i++) { %>
                    <% if (messages[i].messager == row.id) { %>
                      <p style="background: pink; text-align: right;"><%= messages[i].message %></p>
                    <% } else { %>
                      <p style="background: aqua;"><%= messages[i].message %></p>
                    <% } %>
                  <% } %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </form>
      <% } %>
    </div>
</div>
</body>
    <%- include('./partials/footer.ejs') %>
</html>

<script>
  var msgdiv = document.getElementById("msgdiv");
  msgdiv.scrollTop = msgdiv.scrollHeight;
</script>
