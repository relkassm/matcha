<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
<body>
    <div class="global-container">
        <div class="card register-form">
            <div class="card-body">
                <div class ="card-text">
                    <h1 class="card title text-center">REGISTER</h1>
                    <form action="/register" method="POST">
                        <%- include('./partials/ErrorMsg') %>
                        <div class="form-group">
                            <input pattern="[A-Za-z0-9_-]{6,30}" title="Username should be between 6 And 30 And have only characters and _ - symbols"  class="form-control form-control-sm" type="username" id="username" name="username" placeholder="Username" required>
                        </div>
                        <div class="form-group">
                            <input pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}" title="You need to set a valid email And less than 100 characters"  class="form-control form-control-sm" type="email" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input pattern="[A-Za-z]{1,30}"  title="Lastname should be with only characters, and between 1 And 30"  class="form-control form-control-sm" type="lastname" id="lastname" name="lastname" placeholder="Lastname" required>
                        </div>
                        <div class="form-group">
                            <input  pattern="[A-Za-z]{1,30}"  title="firstname should be with only characters, and between 1 And 30 "class="form-control form-control-sm" type="firstname" id="firstname" name="firstname" placeholder="Firstname" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-sm" type="password" id="password" name="password" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-sm" type="password" id="password2" name="password2" placeholder="Confirm Password" required>
                        </div>
                        <button type="Register" class="btn btn-primary btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
    <%- include('./partials/footer.ejs') %>
</html>