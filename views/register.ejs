<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
<body>
    <div class="form">
        <form action="/register" method="POST">
            <input class="inputs" type="text" id="email" name="email" placeholder="Email" required>
            <input class="inputs" type="text" id="username" name="username" placeholder="Username" required>
            <input class="inputs" type="text" id="lastname" name="lastname" placeholder="Lastname" required>
            <input class="inputs" type="text" id="firstname" name="firstname" placeholder="Firstname" required>
            <input class="inputs" type="password" id="password" name="password" placeholder="Password" required>
            <input class="inputs" type="password" id="password2" name="password2" placeholder="Confirm Password" required>
            <button class="submit">Submit</button>
        </form>
        <a href="login">Login</a>
    </div>
</body>
    <%- include('./partials/footer.ejs') %>
</html>